<div class="space-y-4">
  <nav class="w-full bg-white text-xs p-1">
    <ul class="flex items-center space-x-1">
      <li class="flex items-center space-x-2">
        <a href="/" class="text-indigo-700 inline-flex items-center space-x-1">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-3"
            width="16"
            height="16"
            viewBox="0 0 24 24"
          >
            <g fill="currentColor">
              <path
                d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06z"
              />
              <path
                d="m12 5.432l8.159 8.159q.045.044.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198l.091-.086z"
              />
            </g>
          </svg>

          <span>Home</span>
        </a>

        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-3"
          width="16"
          height="16"
          viewBox="0 0 24 24"
        >
          <path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="m8.25 4.5l7.5 7.5l-7.5 7.5"
          />
        </svg>
      </li>

      <li class="flex items-center space-x-2">
        <a
          href="/books"
          class="text-indigo-700 inline-flex items-center space-x-1"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-3"
            width="16"
            height="16"
            viewBox="0 0 48 48"
          >
            <defs>
              <mask id="ipTBookshelf0">
                <path
                  fill="#555"
                  stroke="#fff"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="4"
                  d="M5 6h34s4 2 4 7s-4 7-4 7H5s4-2 4-7s-4-7-4-7m38 22H9s-4 2-4 7s4 7 4 7h34s-4-2-4-7s4-7 4-7"
                />
              </mask>
            </defs>
            <path
              fill="currentColor"
              d="M0 0h48v48H0z"
              mask="url(#ipTBookshelf0)"
            />
          </svg>

          <span>Books</span>
        </a>

        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-3"
          width="16"
          height="16"
          viewBox="0 0 24 24"
        >
          <path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="m8.25 4.5l7.5 7.5l-7.5 7.5"
          />
        </svg>
      </li>

      <li class="flex items-center space-x-2">
        <span class="text-indigo-950/50 inline-flex items-center space-x-1">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-3"
            width="32"
            height="32"
            viewBox="0 0 48 48"
          >
            <g
              fill="none"
              stroke="currentColor"
              stroke-linejoin="round"
              stroke-width="4"
            >
              <path d="M7 37V11a6 6 0 0 1 6-6h22v26H13c-3.3 0-6 2.684-6 6Z" />
              <path
                stroke-linecap="round"
                d="M35 31H13a6 6 0 0 0 0 12h28V7M14 37h20"
              />
            </g>
          </svg>

          <span>Book Details</span>
        </span>
      </li>
    </ul>
  </nav>

  <div class="flex items-center justify-between">
    <h1 class="font-bold text-lg"><%= book.title %></h1>

    <a
      href="/books/<%= book.id %>/edit"
      class="bg-indigo-950 text-indigo-50 rounded text-sm flex items-center space-x-2 px-4 py-2 hover:bg-indigo-600 transition-all duration-200"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
      >
        <path
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="m16.862 4.487l1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
        />
      </svg>

      <span>Edit Book</span>
    </a>
  </div>

  <div class="grid grid-cols-1 gap-4 lg:grid-cols-6">
    <% if (book.thumbnailUrl) { %>
    <img
      src="<%= book.thumbnailUrl %>"
      alt="book cover"
      class="w-full aspect-[9/16] object-cover"
    />
    <% } %>

    <div class="space-y-2 lg:col-span-5">
      <% if (book.title) { %>
      <div class="bg-white rounded p-2">
        <h6 class="font-bold text-xs">Title</h6>
        <%= book.title %>
      </div>

      <% } %> <% if (book.authors) { %>
      <div class="bg-white text-sm rounded p-2">
        <h6 class="font-bold text-xs">Author(s)</h6>
        <%= book.authors.toString() %>
      </div>

      <% } %> <% if (book.published) { %>
      <div class="bg-white text-xs rounded p-2"><%= book.published %></div>
      <h6 class="font-bold text-xs">Published On</h6>
      <% } %> <% if (book.shortDescription) { %>
      <div class="bg-white text-sm rounded p-2">
        <h6 class="font-bold text-xs">Short Description</h6>
        <%= book.shortDescription %>
      </div>

      <% } %> <% if (book.longDescription) { %>
      <div class="bg-white text-sm rounded p-2">
        <h6 class="font-bold text-xs">Long Description</h6>
        <%= book.longDescription %>
      </div>

      <% } %>
    </div>
  </div>
</div>
