<div class="space-y-4">
  <div class="flex items-center justify-between">
    <h1 class="font-bold text-lg">Books</h1>

    <a
      href="/books/new"
      class="bg-indigo-950 text-indigo-50 rounded text-sm flex items-center space-x-2 px-4 py-2 hover:bg-indigo-600 transition-all duration-200"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
      >
        <path
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M12 4.5v15m7.5-7.5h-15"
        />
      </svg>

      <span>New Book</span>
    </a>
  </div>

  <ul
    class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6"
  >
    <% books.forEach((book)=>{ %>
    <li
      class="w-full bg-white border hover:scale-105 transition-all duration-300"
    >
      <a href="/books/<%= book.id %>">
        <img
          src="<%= book.thumbnailUrl %>"
          alt=""
          class="w-full aspect-[10/13] object-cover"
        />

        <div class="space-y-1 p-4 pt-2">
          <div class="font-bold"><%= book.title %></div>
          <div class="text-sm"><%= book.authors.toString() %></div>
          <div class="text-xs"><%= book.published %></div>
        </div>
      </a>
    </li>
    <% }); %>
  </ul>
</div>
